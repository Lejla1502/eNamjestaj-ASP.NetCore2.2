@model eNamjestaj.Web.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    string poruka = (string)ViewData["poruka"];
    
}

<br />
<br />
<br />



<div class="col-md-4 col-md-offset-4">
    <h2>e-Namještaj</h2>

    <form asp-action="Login">

        <div class="form-group">
            <label>Username: </label>
            <div>
                <input asp-for="username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Password: </label>
            <div>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
        </div>


        <input type="submit" class="form-control btn btn-primary" value="Login" />
        <input asp-for="ZapamtiPassword" />   Zapamti password
        <div style="padding-top:20px;">Nemate račun? <a href="/ModulKupac/Registracija/Index" style="color:blue;">Registrujte se</a></div>
    </form>

    @if (poruka != null)
    {
        <br />
        <div class="alert alert-danger">
            @poruka
        </div>
    }
</div>

