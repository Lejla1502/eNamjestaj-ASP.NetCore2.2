<h1>Detalji</h1>
<br />

<div class="card-body">
    <div class="table-responsive">
        <table class=" table table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Proizvod</th>
                    <th>Cijena</th>
                    <th>Količina</th>
                    <th>Boja</th>
                    <th>Dostava</th>
                    <th>Stavka total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.DetaljiNarudzbe)
                {
                    <tr>
                        <td>@x.Proizvod</td>
                        <td>@x.Cijena KM</td>
                        <td>@x.Kolicina</td>
                        <td>@x.Boja</td>
                        <td>@x.Dostava KM</td>
                        <td>@x.Total KM</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
        <br />

